<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_frame">

    <ImageView
        android:id="@+id/popUpForgottenPasswordClose_imageView"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/cancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:contentDescription="@string/close" />

    <TextView
        android:id="@+id/popUpForgottenPasswordTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/popUpForgottenPasswordClose_imageView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/have_you_forgotten_your_password"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/popUpForgottenPasswordDescription_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUpForgottenPasswordTitle_textView"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:text="@string/don_t_worry_write_the_email_with_which_you_are_registered_and_we_will_send_you_the_steps_you_must_follow_to_change_your_password"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/popUpInputEmail_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUpForgottenPasswordDescription_textView"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:padding="10dp"
        android:autofillHints="emailAddress"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:drawableStart="@drawable/email_address_32"
        android:gravity="center"/>

    <Button
        android:id="@+id/popUpForgottenPasswordSend_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send"
        android:layout_below="@+id/popUpInputEmail_editText"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:textSize="20sp"/>

</RelativeLayout>