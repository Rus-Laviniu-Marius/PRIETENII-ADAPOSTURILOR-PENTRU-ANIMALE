<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/popup_frame">

    <ImageView
        android:id="@+id/popUpConfirmEmailClose_imageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/cancel"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/small_margin" />

    <TextView
        android:id="@+id/popUpConfirmEmailTitle_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/confirmation_email"
        android:textStyle="bold"
        android:textSize="@dimen/medium_text_size"
        android:padding="@dimen/small_padding"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_below="@id/popUpConfirmEmailClose_imageView"
        android:layout_margin="@dimen/small_margin"/>

    <TextView
        android:id="@+id/popUpConfirmEmailDescription_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/popUpConfirmEmailTitle_textView"
        android:layout_margin="@dimen/small_margin"
        android:padding="@dimen/small_padding"
        android:layout_centerInParent="true"
        android:text="@string/we_have_sent_you_an_email_to_confirm_your_account"
        android:textSize="@dimen/medium_text_size" />

    <ImageView
        android:id="@+id/popUpConfirmEmailPaperPlane_imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/paper_airplane_64"
        android:layout_below="@id/popUpConfirmEmailDescription_textView"
        android:layout_marginTop="@dimen/large_margin"
        android:layout_centerInParent="true"
        android:contentDescription="@string/flying_paper_plane" />

    <Button
        android:id="@+id/popUpConfirmEmailAccept_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/accept"
        android:layout_below="@+id/popUpConfirmEmailPaperPlane_imageView"
        android:layout_centerInParent="true"
        android:layout_marginTop="@dimen/large_margin"
        android:textSize="@dimen/medium_text_size"
        android:textColor="@color/black"/>

</RelativeLayout>