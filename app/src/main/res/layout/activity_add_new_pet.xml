<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".adoption.AddNewPetActivity"
    android:background="@color/main_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/addNewPetBack_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_64"
            android:contentDescription="@string/back"
            android:layout_margin="10dp"
            android:padding="@dimen/padding" />

        <ImageView
            android:id="@+id/addNewPet_imageView"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/add_image_128"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:contentDescription="@string/new_pet_image_view" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetType_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_pet_type"
                android:textSize="@dimen/small_text_view_size"
                />
            <Spinner
                android:id="@+id/addNewPetType_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetName_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetName_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="username"
                android:inputType="textPersonName"
                android:hint="@string/name"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding" >
            <TextView
                android:id="@+id/addNewPetAge_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/age"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetAge_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="age"
                android:inputType="number"
                android:hint="@string/age"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding" >
            <TextView
                android:id="@+id/addNewPetWeight_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/weight"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetWeight_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="weight"
                android:inputType="numberDecimal"
                android:hint="@string/weight"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetLocation_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/location"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetLocation_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="postalAddress"
                android:inputType="textPostalAddress"
                android:hint="@string/location"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetSize_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetSize_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="size"
                android:inputType="text"
                android:hint="@string/size"
                android:textSize="@dimen/edit_text_size"
                tools:ignore="TextFields" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetBreed_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/breed"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetBreed_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="breed"
                android:inputType="text"
                android:hint="@string/breed"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetSex_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sex"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetSex_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="sex"
                android:inputType="text"
                android:hint="@string/sex"
                android:textSize="@dimen/edit_text_size" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">
            <TextView
                android:id="@+id/addNewPetDescription_textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/description"
                android:textSize="@dimen/small_text_view_size"
                android:visibility="gone"/>
            <EditText
                android:id="@+id/addNewPetDescription_editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autofillHints="pet description"
                android:inputType="textMultiLine"
                android:hint="@string/description"
                android:textSize="@dimen/edit_text_size"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="@dimen/margin_horizontal"
            android:layout_marginVertical="@dimen/margin_vertical"
            android:padding="@dimen/padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/select_color"
                android:textSize="16sp"/>

            <Spinner
                android:id="@+id/addNewPetCardBackgroundColor_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">

            <Button
                android:id="@+id/addNewPetCancel_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_cancel"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/buttons_general"
                style="?android:attr/buttonBarButtonStyle" />
            <Button
                android:id="@+id/addNewPetAdd_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/add"
                android:textColor="@color/black"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:backgroundTint="@color/buttons_general"
                style="?android:attr/buttonBarButtonStyle" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>